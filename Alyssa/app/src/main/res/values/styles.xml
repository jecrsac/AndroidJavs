<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/CCP01</item>
        <item name="colorPrimaryDark">@color/CCP00</item>
        <item name="colorAccent">@color/CCP02</item>
        <item name="android:buttonStyle">@style/ButtonAppTheme</item>
        <item name="android:buttonStyleSmall">@style/SmallButtonAppTheme</item>
        <item name="editTextStyle">@style/EditTextDefault</item>
        <item name="android:spinnerStyle">@style/SpinnerDefault</item>
        <item name="android:windowTitleSize">5dp</item>
        <item name="android:imageButtonStyle">@style/ButtonAppTheme</item>
    </style>

    <style name="ButtonAppTheme" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/apptheme_btn</item>
        <item name="android:textColor">@color/CNT22</item>
        <item name="android:padding">@dimen/m18802</item>
    </style>

    <style name="SmallButtonAppTheme" parent="android:Widget.Holo.Light.Button.Small">
        <item name="android:background">@drawable/apptheme_btn</item>
        <item name="android:textColor">@color/CNT22</item>
        <item name="android:padding">@dimen/m18802</item>
    </style>

    <style name="EditTextDefault" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/apptheme_txt</item>
        <item name="android:textColor">@color/CNT22</item>
        <item name="android:layout_marginLeft">@dimen/m18802</item>
        <item name="android:layout_marginRight">@dimen/m18802</item>
        <item name="android:layout_marginTop">@dimen/m18802</item>
    </style>

    <style name="SpinnerDefault" parent="@android:style/Widget.Spinner">
        <item name="android:background">@drawable/apptheme_txt</item>
        <item name="android:textColor">@color/CNT22</item>
        <item name="android:layout_marginLeft">@dimen/m18802</item>
        <item name="android:layout_marginRight">@dimen/m18802</item>
        <item name="android:layout_marginTop">@dimen/m18802</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:background">@color/CCP04</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
