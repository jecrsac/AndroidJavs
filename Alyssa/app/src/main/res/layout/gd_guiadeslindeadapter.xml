<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingBottom="@dimen/m18800"
    android:paddingStart="@dimen/m18800"
    android:paddingLeft="@dimen/m18800"
    android:paddingRight="@dimen/m18800"
    android:paddingTop="@dimen/m18800">

    <LinearLayout
        android:layout_width="43dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            tools:ignore="UselessParent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/CCP00"
                android:gravity="center"
                android:alpha="0.5" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rdbA"
                android:layout_gravity="center" />

        </FrameLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/res_txt"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/m18802"
        android:layout_marginRight="@dimen/m18802"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/CNT22"
        android:layout_weight="20"
        android:gravity="center"
        android:layout_gravity="top|end" />

    <RelativeLayout
        android:layout_width="43dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            tools:ignore="UselessParent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/CCP00"
                android:gravity="center"
                android:alpha="0.5" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rdbB"
                android:layout_gravity="center" />

        </FrameLayout>

    </RelativeLayout>

</LinearLayout>
