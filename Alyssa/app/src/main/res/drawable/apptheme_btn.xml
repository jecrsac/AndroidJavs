<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke
                android:width="1dip"
                android:color="@color/CCP01" />
            <gradient
                android:angle="-90"
                android:startColor="@color/CCP01"
                android:endColor="@color/CCP01"  />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke
                android:width="1dip"
                android:color="@color/CCP00" />
            <gradient
                android:angle="-90"
                android:startColor="@color/CCP00"
                android:endColor="@color/CCP00" />
        </shape>
    </item>
</selector>
